# 邮件配置 (可选)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASS=your-app-password

# 其他配置
SESSION_SECRET=your-session-secret
CORS_ORIGIN=https://your-domain.com