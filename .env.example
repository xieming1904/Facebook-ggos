# 应用配置
NODE_ENV=production
PORT=5000

# 数据库配置
MONGODB_URI=mongodb://admin:password123@mongodb:27017/facebook_ads?authSource=admin

# JWT密钥 (请在生产环境中更改)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Redis配置
REDIS_URL=redis://redis:6379

# 日志级别
LOG_LEVEL=info

# 文件上传配置
UPLOAD_DIR=./uploads
